                    mov dword ptr [r15 + 0x4], 0x3E4CCCCD
                end:
                ",

		/* 0x140DA25AC */
                ScanSignature
                (
                    "\x41\x8B\x47\x08\xF2\x41\x0F\x10\x07",
                    "xxxxxxxxx"
                ),
                        
                HookBehavior.After
            );
        }

